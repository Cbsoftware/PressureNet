<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TextView
            android:id="@+id/textWhatsNewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:textSize="18dp"
            android:text="Urgent bugfix release"
            android:paddingLeft="18dp"
            android:paddingTop="14dp"/>

        <TextView
            android:id="@+id/textNewFeatures"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textWhatsNewTitle"
            android:paddingLeft="18dp"
            android:text="NEW FROM 4.2.6"
            android:paddingTop="8dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textWhatsNew"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textNewFeatures"
            android:paddingLeft="18dp"
            android:paddingTop="4dp"
            android:text="• Stastical graphs\n• Informative notification icons\n• Bug fixes"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/textNewSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textWhatsNew"
            android:paddingLeft="18dp"
            android:paddingTop="4dp"
            android:text="RECENT SETTINGS UPDATES"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/checkReceiveConditionNotifications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textNewSettings"
            android:paddingLeft="6dp"
            android:layout_marginLeft="12dp"
            android:text="Receive conditions notifications"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/textFrequencyMax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/textNewSettings"
            android:layout_below="@id/checkReceiveConditionNotifications"
            android:paddingTop="8dp"
            android:paddingLeft="18dp"
            android:text="Max. frequency: "
            android:textSize="16dp" />

        <Spinner
            android:id="@+id/spinnerNotificationFrequency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/checkReceiveConditionNotifications"
            android:layout_toRightOf="@id/textFrequencyMax"
            android:paddingTop="6dp"
            android:paddingLeft="18dp"
             />

         <View
            android:id="@+id/sepWhatsNew"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="#D8D8D8"
            android:paddingTop="0dp"
            android:layout_below="@id/spinnerNotificationFrequency"/>
        
        
        <Button
            android:id="@+id/buttonDone"
            style="@android:style/Widget.DeviceDefault.Button.Borderless.Small"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:layout_below="@id/sepWhatsNew"
            android:text="Done"
            android:textColor="#000000"
            android:textSize="20dp" />
    </RelativeLayout>

</ScrollView>