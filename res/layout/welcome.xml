<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textAppAndSharingDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="18dp"
            android:paddingRight="18dp"
            android:paddingTop="18dp"
            android:text="@string/appAndSharingDescritption"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/welcomeShareWith"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="18dp"
                android:paddingRight="18dp"
                android:text="@string/shareWith"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <Spinner
                android:id="@+id/spinnerWelcomeSharing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="18dp" >
            </Spinner>
        </LinearLayout>

        <Button
            android:id="@+id/buttonCloseWelcome"
            style="@android:style/Widget.DeviceDefault.Button.Borderless.Small"
            android:textColor="#000000"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/closeWelcome"
            android:textSize="20dp" />
    </LinearLayout>

</ScrollView>