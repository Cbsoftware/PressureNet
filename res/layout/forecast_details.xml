<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textNoForecastAlerts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        android:paddingTop="12dp"
        android:text="There are no active forecast alerts."
        android:textColor="@android:color/black"
        android:visibility="gone" />
    
 	<ListView
 	    android:id="@+id/listForecastAlerts"
 	    android:layout_width="match_parent"
 	    android:layout_height="match_parent"
 	    android:padding="8dp"/>
    
    <View
        android:id="@+id/altitude_sep"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_below="@id/spinDistanceUnit"
        android:layout_gravity="center_vertical"
        android:background="#D8D8D8"
        android:paddingTop="12dip" />

    <Button
        android:id="@+id/buttonDismissForecastDetails"
        style="@android:style/Widget.DeviceDefault.Button.Borderless.Small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:text="Close" />

</LinearLayout>