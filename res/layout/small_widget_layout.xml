<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutSmallWidget"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_widget"
    android:paddingBottom="@dimen/widget_margin"
    android:paddingTop="@dimen/widget_margin" >

    <ImageButton
        android:id="@+id/widgetSmallSubmitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@null"
        android:paddingBottom="2dp"
        android:paddingLeft="4dp"
        android:src="@drawable/widget_button_drawable" />

    <ImageView
        android:id="@+id/widget_tendency_image_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/widgetSmallSubmitButton"
        android:clickable="true"
        android:paddingRight="6dp"
        android:paddingTop="6dp"
        android:src="@drawable/ic_widget_rising"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/widget_tendency_image_steady"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:paddingRight="6dp"
        android:src="@drawable/ic_widget_steady"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/widget_tendency_image_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/widgetSmallSubmitButton"
        android:layout_alignParentRight="true"
        android:clickable="true"
        android:paddingBottom="6dp"
        android:paddingRight="6dp"
        android:src="@drawable/ic_widget_falling"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/widgetSmallText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/widgetSmallSubmitButton"
        android:clickable="true"
        android:paddingLeft="4dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textStyle="bold" />

</RelativeLayout>